<?xml version="1.0" encoding="utf-8"?>


<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/articlesFragment">

    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.newyork.times.ui.articles.ArticlesFragment"
        android:label="NY News"
        tools:layout="@layout/fragment_articles">

        <action
            android:id="@+id/action_articlesFragment_to_articleDetailsFragment"
            app:destination="@id/articleDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />


    </fragment>


    <fragment
        android:id="@+id/articleDetailsFragment"
        android:name="com.newyork.times.ui.ArticleDetailsFragment"
        android:label="Article Details"
        tools:layout="@layout/fragment_article_details">
        <argument
            android:name="article"
            app:argType="com.newyork.times.app.model.Article" />
    </fragment>

</navigation>
