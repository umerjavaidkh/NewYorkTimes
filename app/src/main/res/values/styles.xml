<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="ViewWithSideMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_screen_side</item>
        <item name="android:layout_marginEnd">@dimen/margin_screen_side</item>
    </style>

</resources>